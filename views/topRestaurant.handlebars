<h1>人氣餐廳</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each restaurants}}
  <div class="card col-3 my-2 ">
    <a href="/restaurants/{{this.id}}">
      <img class="" src="{{this.image}}" width="140px" height="140px">
    </a>

    <h3 class="d-flex justify-content-center" style=" height: 80px; align-items: center;">
      {{this.name}}</h3>

    <span class="badge badge-secondary">追蹤人數：{{this.FavoritedCount}}</span>
    <p>
      {{#if isFavorited }}
    <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
      <button type="submit" class="mx-2 btn btn-danger">移除最愛</button>
    </form>
    {{else}}
    <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
        class="mx-2 btn btn-primary">加到最愛</button></form>
    {{/if}}
    </p>
  </div>
  {{/each}}
</div>