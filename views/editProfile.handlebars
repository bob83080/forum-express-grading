<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name" value="{{user.name}}" required>
  </div>
  <div class="form-group">
    <label for="image">Image (若未選擇檔案，將使用系統預設頭像)</label>
    <input type="file" class="form-control-file" name="image" id="image" accept=".jpg,.jpeg,.png"
      value="{{user.image}}">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form